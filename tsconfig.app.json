/*
 * tsconfig.app.json — конфигурация компилятора для исходного кода приложения.
 * Наследует настройки DOM из `@vue/tsconfig`, подключает алиас @/*.
 */
{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
